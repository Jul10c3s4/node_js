<h2>Editar aluno</h2>

{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{else}}
{{/each}}

<form action="/admin/todos/edit" method="POST">
    <div class="card">
        <div class="card">
            <p>nome: </p>
            <input type="hidden" name="id" value="{{Aluno.id}}">
            <input type="text" name="nome" value="{{Aluno.nome}}" class="form-control">
            <p>idade: </p>
            <input type="number" name="idade"
            value="{{Aluno.idade}}" class="form-control">
            <p>Email:</p>
            <input type="email" name="email" value="{{Aluno.email}}"class="form-control">
            <br>
            <button type="submit" class="btn btn-success" > Cadastrar postagem</button>
        </div>
    </div>
</form>